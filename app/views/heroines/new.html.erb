<h1>New Heroine</h1>

<%= render 'form', heroine: @heroine %>

<%= link_to 'Back', heroines_path %>

<% if flash[:errors] != nil %>
  <% flash[:errors].each do |e| %>
    <li>><%= e %></li>
  <% end %>
<% end %>

<%= form_for @heroine do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :super_name %>:
  <%= f.text_field :super_name %><br />

  <%= f.label "Power" %>:
  <%= f.collection_select :power_id, @powers, :id, :name %>

  <%= f.submit %>
<% end %>
