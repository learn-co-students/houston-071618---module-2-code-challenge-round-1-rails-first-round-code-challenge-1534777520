<h2>All Heroines</h2>

<h3>Search By Superpower:</h3>
	<%= form_tag(powers_path, method: :get) do %>
		<%= label_tag(:term, params[:term]) %>
		<%= text_field_tag :term %>
		<%= submit_tag "Search" %>
<% end %>


<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine %>
      <%= link_to "Edit", edit_heroine_path(heroine) %>
    </li>
    <br>
  <% end %>
</ul>


<%= link_to "Create a New Heroine", new_heroine_path %>